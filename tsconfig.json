{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "composite": true,
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
  },
  "typedocOptions": {
    "mode": "file",
    "readme": "docs/typedoc_index.md",
    "includeDeclarations": true,
    "excludeExternals": true,
    "excludeNotExported": true,
    "excludePrivate": true,
    "disableSources": true,
    "gaID": "UA-107473046-3",
    "listInvalidSymbolLinks": true,
    "out": "docs/public/apiref"
  }
}
